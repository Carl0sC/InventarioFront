@model ProductInventoryFront.Models.ProductModel

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ManufacturingType" class="control-label"></label>
        <select asp-for="ManufacturingType" class="form-control">
            <option value="1">Manufactured</option>
            <option value="0">Not Manufactured</option>
        </select>
        <span asp-validation-for="ManufacturingType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State" class="control-label"></label>
        <select asp-for="State" class="form-control">
            <option value="1">Available</option>
            <option value="0">Not Available</option>
        </select>
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>
